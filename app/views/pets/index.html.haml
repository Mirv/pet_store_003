%h2 Listing pets

%table.table.table-hover
  %thead
    %tr
      %th{:scope => "col"} Name
      %th{:scope => "col"} Description
      %th{:scope => "col"} Age
      %th{:scope => "col"} Pet breed
      %th{:scope => "col"} Location
      %th{:scope => "col"} Status
      %th{:scope => "col"} 
      %th{:scope => "col"} 
      %th{:scope => "col"} 

  %tbody
    - if @pets.count > 0
      // = render partial: 'pets/pet_list', collection: @pets, cached: true
      - @pets.each do |pet|
        - cache(pet) do
          %tr.table-primary
            %td= pet.name
            %td= pet.description
            %td= pet.age
            %td= pet.pet_breed.name
            %td= pet.location.name
            %td= pet.status.titleize
            %td= link_to 'Show', pet
            - if current_user
              - if policy(pet).admin?
                %td= link_to 'Edit', edit_pet_path(pet)
                %td= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }
              - else
                - if policy(pet).edit? 
                  %td= link_to 'Edit', edit_pet_path(pet)

%br

= link_to 'New Pet', new_pet_path

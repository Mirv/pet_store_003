%h1 Listing pets

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Age
      %th Pet breed
      %th Location
      %th Status
      %th
      %th
      %th

  %tbody
    - if @pets.count > 0
      - @pets.each do |pet|
        %tr
          %td= pet.name
          %td= pet.description
          %td= pet.age
          %td= pet.pet_breed.name
          %td= pet.location.name
          %td= pet.status.titleize
          %td= link_to 'Show', pet
          - if current_user
            - if policy(pet).admin?
              %td= link_to 'Edit', edit_pet_path(pet)
              %td= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }
            - else
              - if policy(pet).edit? 
                %td= link_to 'Edit', edit_pet_path(pet)
              
%br

= link_to 'New Pet', new_pet_path
